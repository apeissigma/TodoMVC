@model IEnumerable<TodoMVC.Models.TodoModels.ITask>;

@{
    ViewData["Title"] = "Todo ";
}

<h1>What to do...</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                Toggle Status
            </th>
            <th>
                Task
            </th>
            <th>
                Description
            </th>
            <th>
                Due Date
            </th>
            <th>
                Overdue Status
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.isComplete)
            </td>
            <td>
                @Html.ActionLink("Toggle", "ToggleComplete", new { id = item.id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.taskName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.taskDescription)
            </td>
            <td>
                    @item.dueDate.ToString("dddd, MM/dd/yyyy HH:mm tt")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isOverdue)
            </td>
            <td> 
                @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
}
    </tbody>
</table>
