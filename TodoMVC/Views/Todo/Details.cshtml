@*
    ASP.NET Boostrap component reference: 
    https://getbootstrap.com/docs/4.0/components/badge/
    https://getbootstrap.com/docs/4.0/components/buttons/
*@

@model TodoMVC.Models.TodoModels.ITask;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tasks</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.taskName)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.taskDescription)
        </dd>
        <dt class="col-sm-2">
            Due Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dueDate)
        </dd>
        <dt class="col-sm-2">
            Task Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.isComplete)
            {
                <span class="badge bg-success">Complete</span>
            }
            else
            {
                <span class="badge bg-warning text-decoration-none">Incomplete</span>
            }
        </dd>
        <dt class = "col-sm-2">
            Overdue Status
        </dt>
        <dd class = "col-sm-10">
            @* overdue but completed *@
            @if (Model.isOverdue && Model.isComplete)
            {
                <span class="badge bg-light">Completed</span>
            }
            @* not overdue but completed *@
            else if (Model.isOverdue && Model.isComplete)
            {
                <span class="badge bg-light">Completed</span>
            }
            @* overdue *@
            else if (Model.isOverdue)
            {
                <span class="badge bg-danger">Overdue</span>
            }
            @* not overdue but due in 24 hours *@
            else if (!Model.isOverdue && (Model.dueDate.AddDays(-1) <= DateTime.Now))
            {
                <span class="badge bg-warning">Due Soon</span>
            }
            @* not overdue *@
            else
            {
                <span class="badge bg-secondary">On Time</span>
            }
        </dd>
        
    </dl>
</div>
<div>
    <a href="@Url.Action("Edit", new { id = Model.id })" class="btn bg-primary">Edit Task</a>
    <a asp-action="Index" class="btn bg-secondary">Back to List</a>
</div>
