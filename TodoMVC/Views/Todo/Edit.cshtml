    ASP.NET Boostrap component reference: 
    https://getbootstrap.com/docs/4.0/components/badge/
    https://getbootstrap.com/docs/4.0/components/buttons/
*@

@model TodoMVC.Models.TodoModels.ITask;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Task</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="taskName" class="control-label">Name</label>
                <input asp-for="taskName" class="form-control" />
                <span asp-validation-for="taskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="taskDescription" class="control-label">Description</label>
                <input asp-for="taskDescription" class="form-control" />
                <span asp-validation-for="taskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dueDate" class="control-label">Due Date</label>
                <input asp-for="dueDate" class="form-control" />
                <span asp-validation-for="dueDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Task Status (Click to mark complete/incomplete)</label>
                <br />
                @if (Model.isComplete)
                {
                    <a href="@Url.Action("ToggleComplete", "Todo", new { id = Model.id })" class="btn btn-success btn-sm">Complete</a>
                }
                else
                {
                    <a href="@Url.Action("ToggleComplete", "Todo", new { id = Model.id })" class="btn btn-warning btn-sm">Incomplete</a>
                }
            </div>

            <div><hr /></div>

            <div class="form-group">
                <input type="submit" value="Save Task" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
